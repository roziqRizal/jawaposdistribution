<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobidevelop.jpdistribution.resetPassword"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:id="@+id/topBar"
        android:layout_alignParentTop="true"
        android:background="@color/basic">

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/backbuttonimagebaru">

        </FrameLayout>



        <TextView
            android:text="Reset Password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:gravity="left|center"
            android:paddingLeft="40dp"
            android:textSize="19sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentReset"
        android:layout_below="@+id/topBar"
        android:layout_above="@+id/botBar"
        android:background="@drawable/contentimage2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset password"
            android:id="@+id/textView12"
            android:layout_gravity="center"
            android:textColor="@color/basic"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email address and we will send you a link"
            android:id="@+id/textView13"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="#000000"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to reset your password."
            android:id="@+id/textView14"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:ems="10"
            android:id="@+id/emailReset"
            android:hint="@string/prompt_email"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="14sp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/basic"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/botBar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:layout_weight="0.5"
            android:background="@color/button">

            <TextView
                android:text="Reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="0.5"
            android:background="@color/white">

            <TextView
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView8"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/button"/>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
