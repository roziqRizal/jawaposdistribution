<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobidevelop.jpdistribution.uploadReport">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/topBar"
        android:layout_alignParentTop="true"
        android:background="@color/basic"
        android:layout_height="57dp">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/topBarEdit">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/profile"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm Delivery Result"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/topBar"
        android:background="@color/white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buatProgress"
            android:layout_alignParentTop="true"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/rightborder"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="21dp"
                    android:id="@+id/atas">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/deliveryPoint"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/basic"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:id="@+id/tengah"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kanan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/atas"
                    android:layout_marginLeft="20dp"
                    android:text="Delivery points"
                    android:id="@+id/textView10"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginBottom="15dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/leftborder"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:id="@+id/duration"
                    android:layout_marginTop="17dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/duration"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="Duration"
                    android:id="@+id/textView11"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewbottom">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textSize="13sp"
                android:textColor="@color/red"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:text="Please provide comments on skipped deliveries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_below="@+id/textView25"
                android:textSize="13sp"
                android:textColor="@color/grey"
                android:layout_marginLeft="21dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/button5"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttonuploadimage"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:visibility="invisible"/>

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:id="@+id/viewbottom"
            android:layout_below="@+id/buatProgress"
            >
        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewframe2"
        android:layout_below="@+id/relativeLayout3"
        android:background="@drawable/backgrounuploadimage"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/imagesukses"
            android:id="@+id/imageView10"
            android:layout_centerInParent="true"
            />

        <TextView
            android:text="All points are completed!"
            android:textSize="24sp"
            android:textColor="@color/basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_below="@+id/imageView10"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewframe"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:background="@drawable/contentmainshadowlayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/viewgradationbot"
            android:layout_marginTop="0dp"
            android:paddingTop="3dp"
            android:background="@null"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableLayout"
                android:layout_below="@+id/relativeLayout3"
                >

            </TableLayout>
        </ScrollView>

    </FrameLayout>




</RelativeLayout>